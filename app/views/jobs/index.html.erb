<h1>Listing jobs</h1>

<table>
  <tr>
    <th>URL</th>
    <th>Price</th>
    <th>Employee</th>
    <th>Created</th>
    <th>Accepted</th>
    <th>Finished</th>
    <th>Approved</th>
  </tr>

<% for job in @jobs %>
  <tr>
    <td><%= render :partial => "link_to_project", :locals => { :job => job }  %></td>
    <td><%=h Money.new(job.price_in_cents) %></td>
    <td><%=h job.employee_id %></td>
    <td><%=h job.created_at %></td>
    <td><%=h job.accepted %></td>
    <td><%=h job.finished %></td>
    <td><%=h job.approved %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New job', new_job_path %>
